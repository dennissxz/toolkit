{
  "title": "application-specific key mappings",
  "rules": [
    {
      "description": "atom: left_ctrl + b to run all code below",
      "manipulators": [
        { "conditions": [
             {
               "bundle_identifiers": [
                   "com.github.atom"
               ],
               "type": "frontmost_application_if"
             }
           ],
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [ "left_control" ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["left_command", "shift"]
            },
            {
              "key_code": "return_or_enter",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "jupyter: left_ctrl + (shift) + a/b to insert a new (markdown) cell above/below",
      "manipulators": [
        { "conditions": [
             {
               "bundle_identifiers": [
                   "com.google.Chrome"
               ],
               "type": "frontmost_application_if"
             }
           ],
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [ "" ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "a"
            },
            {
              "key_code": "return_or_enter"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [ "left_control" ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "b"
            },
            {
              "key_code": "return_or_enter"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [ "left_control", "shift" ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "a"
            },
            {
              "key_code": "m"
            },
            {
              "key_code": "return_or_enter"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [ "left_control", "shift" ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "b"
            },
            {
              "key_code": "m"
            },
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "lyx: left_ctrl + x to insert additional theorem text",
      "manipulators": [
        { "conditions": [
             {
               "bundle_identifiers": [
                   "org.lyx.lyx"
               ],
               "type": "frontmost_application_if"
             }
           ],
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "i"
            },
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "a"
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "lyx: left_ctrl + s to insert a separated theorem/def below",
      "manipulators": [
        { "conditions": [
             {
               "bundle_identifiers": [
                   "org.lyx.lyx"
               ],
               "type": "frontmost_application_if"
             }
           ],
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "equal_sign",
              "modifiers": [
                "control"
              ]
            },
            {
              "key_code": "i"
            },
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "s"
            },
            {
              "key_code": "e"
            },
            {
              "key_code": "down_arrow"
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
